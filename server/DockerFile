# Dockerfile для Habit Tracker Fullstack

# Этап 1: Сборка зависимостей
FROM node:18-alpine AS deps
WORKDIR /app

# Копируем файлы зависимостей
COPY package*.json ./
COPY package-lock.json* ./

# Устанавливаем зависимости
RUN npm ci --only=production --ignore-scripts

# Этап 2: Сборка приложения
FROM node:18-alpine AS builder
WORKDIR /app

# Копируем зависимости из предыдущего этапа
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Создаем оптимизированную сборку
RUN npm run build || true

# Этап 3: Финальный образ
FROM node:18-alpine AS runner
WORKDIR /app

# Устанавливаем переменные окружения
ENV NODE_ENV=production
ENV PORT=5000
ENV TZ=Europe/Moscow

# Создаем непривилегированного пользователя
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 habituser

# Создаем необходимые директории
RUN mkdir -p /app/logs /app/public/uploads && \
    chown -R habituser:nodejs /app

# Копируем зависимости и приложение
COPY --from=builder --chown=habituser:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=habituser:nodejs /app/server.js ./
COPY --from=builder --chown=habituser:nodejs /app/package.json ./
COPY --from=builder --chown=habituser:nodejs /app/public ./public
COPY --from=builder --chown=habituser:nodejs /app/middleware ./middleware
COPY --from=builder --chown=habituser:nodejs /app/models ./models
COPY --from=builder --chown=habituser:nodejs /app/routes ./routes
COPY --from=builder --chown=habituser:nodejs /app/utils ./utils
COPY --from=builder --chown=habituser:nodejs /app/.env.example ./.env.example

# Копируем health check скрипт
COPY --from=builder --chown=habituser:nodejs /app/healthcheck.js ./healthcheck.js

# Настройка прав
RUN chmod -R 755 /app/logs && \
    chmod 644 /app/.env.example && \
    chmod 755 /app/healthcheck.js

# Переключаемся на непривилегированного пользователя
USER habituser

# Открываем порт
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD node healthcheck.js

# Запуск приложения
CMD ["node", "server.js"]